<div class="notify-container">
    <div class="modal fade right" id="notifications">
        <div class="modal-dialog bg-danger">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Notifications</h2>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div id="notify-message" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Thanks</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#notifications">Show Notification</button>
        </div>
    </div>
</div>